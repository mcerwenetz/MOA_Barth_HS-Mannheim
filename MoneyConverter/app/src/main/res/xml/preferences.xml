        android:key="@string/key_initialer_umrechnungswert"
        android:title="@string/key_initialer_umrechnungswert"
        android:defaultValue="0"
        />
    <PreferenceCategory android:title="Initalwerte">
        <ListPreference
            android:defaultValue="EUR"
            android:entries="@array/wechselkursNamen"
