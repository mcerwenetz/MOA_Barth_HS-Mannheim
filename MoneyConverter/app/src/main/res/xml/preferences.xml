            android:key="@string/key_initiale_quellwaehrung"
            android:title="@string/key_initiale_quellwaehrung" />
        <ListPreference
            android:defaultValue="EUR"
            android:entries="@array/wechselkursNamen"
            android:entryValues="@array/wechselkursNamen"
            android:key="@string/key_initiale_zielwaehrung"
            android:title="@string/key_initiale_zielwaehrung" />
