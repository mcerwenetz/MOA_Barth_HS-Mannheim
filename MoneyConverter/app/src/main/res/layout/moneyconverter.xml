<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bitte Währung auswählen"
        android:textSize="30sp"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_gravity="left"
            >
            <RadioGroup
                android:id="@+id/rgSource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <RadioButton
                    android:id="@+id/rbSourceEuro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EUR"
                    />
                <RadioButton
                    android:id="@+id/rbSourceUSD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="USD"
                    />
                <RadioButton
                    android:id="@+id/rbSourceGRD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GRD"
                    />
            </RadioGroup>
            <EditText
                android:id="@+id/etAmountSource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:orientation="vertical"
            >
            <RadioGroup
                android:id="@+id/rgDest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <RadioButton
                    android:id="@+id/rbDestEuro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EUR"
                    />
                <RadioButton
                    android:id="@+id/rbDestUSD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="USD"
                    />
                <RadioButton
                    android:id="@+id/rbDestGRD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GRD"
                    />
            </RadioGroup>
            <TextView
                android:id="@+id/tvResult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="30sp"
                />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>